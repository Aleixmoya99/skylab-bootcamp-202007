<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hero list</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/list.css">
</head>

<body>
    <h2>Products</h2>
    
    <ul class=" heroes">
        <% heroList.forEach(hero => { %>
        <li>
            <a href="/heroes/<%= hero._id %>">
                <span class="badge"><%= hero.id %></span> <%= hero.name %>
            </a>

            <form method="POST">
                <button class="delete" title="delete hero" type="submit" name="heroId" value="<%= hero._id %>">x
                    </button;>
            </form>
        </li>
        <% }) %>
    </ul>
</body>

</html>