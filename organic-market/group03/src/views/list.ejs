</head>

<body>
	<%- include('header')%>
	<h2><%= title%></h2>

	<div>
		<label>Product name:
			<input #heroName />
		</label>
		<button>
			create product
		</button>
	</div>

	<form action="/" method="POST">
		<ul class="heroes">
			<% for(let i = 0; i<recipes.length; i++){%>
			<li>
				<a href="/list/<%=recipes[i].title%>">
					<span class="badge"><%= recipes[i].title %></span>
				</a> <%= recipes[i].price %>$
				<button class="add" title="add to cart" type="submit" name="product" value="<%=recipes[i].title%>">
					+
				</button>
			</li>
			<% } %>
		</ul>
	</form>
</body>

</html>