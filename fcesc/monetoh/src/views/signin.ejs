<div class='signin'>
  <form action="<%=ROUTES.signin.path%>" method="POST" name="signinForm">
    <label for="signin__name">Username:</label>
    <input type="text" id="signin__name" name="signin__name" value="" />
    <label for="signin__password">Password:</label>
    <input type="password" id="signin__password" name="signin__password" value="" />
    <button type="submit" name="signinButton">Sign in</button>
  </form>
  <button>
    <a href="<%=ROUTES.signup.path%>">Sign up</a>
  </button>
</div>