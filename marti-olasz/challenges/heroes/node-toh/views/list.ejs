<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hero list</title>
</head>

<body>
    <h1>Tour of Heroes</h1>
    <button><a href="/">Dashboard</a></button>
    <button>Heroes</button>
    <h2>My Heroes</h2>
    <section class="list"></section>
    <% heroList.forEach(element => { %>
    <section class="my-hero">
        <div class="dashboard__item">
            <a href=<%='/hero?id='+element.id %>>
                <%=element.name%>
            </a>
        </div>
        <button><a class="button">View details</a></button>
        <div class="my-hero__edit">
            <button class="button" <%= onclick=saveHero(element.id) %>>edit hero</button>
            <button class="button" <%= onclick=deleteHero(element.id)%>>X</button>
        </div>
    </section>
    <% }) %>

    <script src="../heroActions.js"></script>
    <script src="../heroStore.js"></script>
</body>

</html>