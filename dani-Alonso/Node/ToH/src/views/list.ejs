<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hero list</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/list.css">
</head>

<body>
    <%-include('header')-%>
    <h2>My Heroes</h2>
    <div>
        
        <form method="POST">
        <label>Hero name:
            <input value="" name="newHero"/>
        </label>

        <button type="submit" name="addHero">
            add
        </button>

        <button name="deleteAll" type="submit" value="<%={}%>">
            delete All
        </button>
    </form>
    </div>
    
    <% heroList.forEach(hero => { %>
        <ul class=" heroes">
            <li *ngFor="let hero of heroes">
                <a href="/heroes/<%= hero._id %>">
                    <span class="badge"><%= hero.id %></span> <%= hero.name %>
                </a>
                <form method="POST" >
                <button class="delete" title="delete hero" " type="submit" name="heroId" value="<%= hero._id %>">x</button;>
                </form>
                </li>
            </ul>
    <% }) %>
</body>

</html>