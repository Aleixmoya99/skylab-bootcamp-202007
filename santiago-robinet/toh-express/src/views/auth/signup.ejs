<body>
    <%- include('../header')-%>
    <h2>Sign Up or <a href="/auth/signin"> SignInnn</a></h2>
    <form action="/auth/signup" method="POST">
        <div>
            <label for="user">
                User:
                <input type="text" name="user" />
            </label>
        </div>

        <div>
            <label for="password">
                Password:
